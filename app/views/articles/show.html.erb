<header class="index-header">
	<div class="show-group">
		<div class="article-arrow">
			<%= link_to "Previous", @article.prev %>
		</div>
	<h1><%=	@article.title	%></h1>
		<div class="article-arrow">
			<%= link_to "next", @article.next %>
		</div>
	</div>
</header>
<div class="tag-group">
  <%=link_to 'Tags', tags_path,:class => 'article-arrow spacer' %>

	<%	@article.tags.each	do	|tag|	%>
			<%=	link_to	tag.name,	tag_path(tag),:class => 'article-arrow'	%>
	<%	end	%>

</div>
<div class="article-body">
	<article>
		<%=	raw(@article.body)	%>
	</article>
</div>
<div class="comment-section"
	<h3>Comments	(<%=	@article.comments.size	%>)</h3>
	<%=	render	partial:	'articles/comment',	collection:	@article.comments.reverse	%>
	<%=	render	partial:	'comments/form'	%>
</div>
<div class="article-links">
	<%=	link_to	"<<	Back	to	Articles	List",	articles_path	%><br/>
	<%=	link_to	"delete",	article_path(@article),	method:	:delete, data:
	{confirm:	"Really	delete	the	article?"}	%><br/>
	<%=	link_to	"edit",	edit_article_path(@article)	%>
</div>
