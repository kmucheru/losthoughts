<div class='new-article-form'>

<%=	form_for(@article)	do	|f|	%>

      <ul>
      <%	@article.errors.full_messages.each	do	|error|	%>
          <li><%=	error	%></li>
      <%	end	%>
      </ul>

        <p>
        		<%=	f.label	:tag_list	%><br	/>
        		<%=	f.text_field	:tag_list, :class => 'entry-row'	%>
        </p>


        <p>
            <%=	f.label	:title	%><br	/>
            <%=	f.text_field	:title, :class => 'entry-row'	%>
        </p>


        <p>
            <%=	f.label	:body	%><br	/>
            <%=	f.trix_editor	:body	%>
        </p>


        <p>
            <%=	f.submit	%>
        </p>

    <%	end	%>

</div>
